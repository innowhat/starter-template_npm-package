{
    "homepage": "https://github.com/innowhat/starter-template_npm-package#readme",
    "author": "innoo.dev",
    "license": "MIT",
    "name": "@innowhat/starter-template_npm-package",
    "version": "1.0.6",
    "description": "An npm package for demonstration purposes using TypeScript to build for the ECMAScript Module format (i.e. ESM or ES Module). It can be used in Node.js and browser applications.",
    "type": "module",
    "types": "dist/index.d.ts",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm run clean && tsc -p ./tsconfig.json",
        "prepack": "npm run build",
        "clean": "rimraf ./dist",
        "lint": "eslint --fix .",
        "lint:check": "eslint .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preCommit": "npm run lint:check && npm run format:check",
        "test": "vitest",
        "test:ci": "vitest run",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/innowhat/starter-template_npm-package.git"
    },
    "bugs": {
        "url": "https://github.com/innowhat/starter-template_npm-package/issues"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/node": "^22.12.0",
        "eslint": "^9.34.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "prettier": "3.6.2",
        "rimraf": "^6.0.1",
        "typescript": "^5",
        "typescript-eslint": "^8.41.0",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "npm",
        "javascript",
        "typescript",
        "esm",
        "cjs",
        "nodejs",
        "commonjs",
        "ecmascript",
        "beginner",
        "example",
        "demonstration"
    ]
}
